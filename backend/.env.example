# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/zentube

# JWT Secret para autenticación
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# Configuración de archivos
MAX_FILE_SIZE=500000000
UPLOAD_PATH=./uploads

# API Keys externas (opcional)
YOUTUBE_API_KEY=tu_youtube_api_key_aqui

# Configuración de email (opcional para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_app

# Configuración de almacenamiento en la nube (opcional)
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_BUCKET_NAME=zentube-videos
AWS_REGION=us-east-1

# URLs del frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Configuración de Redis (opcional para cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log